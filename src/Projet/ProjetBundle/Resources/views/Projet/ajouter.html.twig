<div id="create_project" class="modal custom-modal fade" role="dialog">
    <div class="modal-dialog">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <div class="modal-content modal-lg">
            <div class="modal-header">
                <h4 class="modal-title">Ajouter un nouveau Projet</h4>
            </div>
            <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Project Name</label>
                                <input class="form-control" type="text" id="titreProjetAjout">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea rows="4" cols="5" class="form-control summernote" placeholder="Enter your message here" id="descriptionProjetAjout"></textarea>
                    </div>
                    <div class="m-t-20 text-center">
                        <button class="btn btn-primary" id="submitProjetAjout">Create Project</button>
                    </div>
            </div>
        </div>
    </div>
</div>